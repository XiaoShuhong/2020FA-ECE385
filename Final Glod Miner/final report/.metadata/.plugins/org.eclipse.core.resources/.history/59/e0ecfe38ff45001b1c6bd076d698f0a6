#ifndef IO_HANDLER_H_
#define IO_HANDLER_H_
#include "alt_types.h"
#include "system.h"

// These addresses are defined in system.h generated by Eclipse, and they
// should have been matched to the addresses shown in Qsys.
// If for any reason they are not correctly defined, you can replace these
// with the addresses you read in Qsys.
#define otg_hpi_address			(volatile int*) 	OTG_HPI_ADDRESS_BASE
#define otg_hpi_data			(volatile int*)	    OTG_HPI_DATA_BASE
#define otg_hpi_r				(volatile char*)	OTG_HPI_R_BASE
#define otg_hpi_cs				(volatile char*)	OTG_HPI_CS_BASE //FOR SOME REASON CS BASE BEHAVES WEIRDLY MIGHT HAVE TO SET MANUALLY
#define otg_hpi_w				(volatile char*)	OTG_HPI_W_BASE
#define otg_hpi_reset			(volatile char*)	OTG_HPI_RESET_BASE
#define keycode_base			(volatile char*)	KEYCODE_BASE
#define keycode_base0			(volatile char*)	0x00000040
#define keycode_base1			(volatile char*)	0x00000030
#define keycode_base2			(volatile char*)	0x00000020
#define position_0				(volatile char*)	0x000001a0
#define position_1				(volatile char*)	0x00000190
#define position_2				(volatile char*)	0x00000180
#define position_3				(volatile char*)	0x00000170
#define position_4				(volatile char*)	0x00000160
#define position_5				(volatile char*)	0x00000150
#define position_6				(volatile char*)	0x00000140
#define position_7				(volatile char*)	0x00000130
#define position_8				(volatile char*)	0x00000120
#define position_9				(volatile char*)	0x00000110
#define position_10				(volatile char*)	0x00000100
#define position_11				(volatile char*)	0x000000f0
#define position_12				(volatile char*)	0x000000e0
#define position_13				(volatile char*)	0x000000d0
#define position_14				(volatile char*)	0x000000c0
#define position_15				(volatile char*)	0x000000a0
#define position_16				(volatile char*)	0x00000090
#define position_17				(volatile char*)	0x00000080
#define position_18				(volatile char*)	0x00000070
#define position_19				(volatile char*)	0x00000060
#define position_20				(volatile char*)	0x00000050
#define is_new_game_start		(volatile char*)	0x0000_01b0
void IO_write(alt_u8 Address, alt_u16 Data);
alt_u16 IO_read(alt_u8 Address);
void IO_init(void);


#endif
